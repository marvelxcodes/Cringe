generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  body      String
  author    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String   @db.ObjectId
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  caption   String
  creator   String
  tags      String[]
  thumbnail String
  likes     Int       @default(0)
  createdAt DateTime  @default(now())
  Comment   Comment[]
}

model Liked {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  postId String[]
}
